<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.workflow-item-toolbar {
			padding-bottom: 7px;
			margin-bottom: 4px;
			margin-top: 2px;
			margin-right: 2px;
			width: 220px;
			text-align: right;
		}
		
		.workflow-item-header {
			background-color: #d0e4f6;
			border-bottom-style: solid;
			border-bottom-width: 1px;
			width: 220px;
			text-align: center;
		}
	</ui:style>

	<g:HTMLPanel>
		<div
			style="border-style: solid; border-width: 1px; margin:5px 5px 5px 5px; align: right; width: 220px"
			ui:field="mainDiv">
			
			<g:Panel styleName="{style.workflow-item-header}"
				ui:field="item">
			</g:Panel>

			<g:HorizontalPanel styleName="{style.workflow-item-toolbar}">
				<g:PushButton styleName="imageButtonStyle" ui:field="editButton"
					text="Edit" title="Edit" />
				<g:PushButton styleName="imageButtonStyle" ui:field="deleteButton"
					text="Delete" title="Delete" />
			</g:HorizontalPanel>
		</div>

	</g:HTMLPanel>
</ui:UiBinder>