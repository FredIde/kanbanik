<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style
		type="com.googlecode.kanbanik.client.modules.editworkflow.workflow.v2.WorkflowEditingComponent.Style">
			.mainPanel {
			}
			
			.boardPanel {
				float: left;
			}
			
			.palettePanel {
				float: left;
			}
			
			.bordered { 
				border: 1px solid black;
			}
			
			.dropTargetStyle img {
				display: block;
				margin-left: auto;
				margin-right: auto
			}
			
			.palettePanelStyle {
				margin-top: 2px;
				text-align: center;
				border: 1px solid black;
				margin-left: 0px;
				margin-right: 0px
			}
			
			.tablePanelStyle {
				text-align: center;
				border: 1px solid black;
				margin-top: 5px;
			}
			
			.palettePanelStyle>table {
	 			margin-left: auto;
    			margin-right: auto;
			}
			
			.headerTextStyle {
				font-weight: bold;
			}
			
		</ui:style>

	<g:FlowPanel addStyleNames="mainPanel">
			<g:FlowPanel ui:field="board" addStyleNames="boardPanel" />
	</g:FlowPanel>

</ui:UiBinder>