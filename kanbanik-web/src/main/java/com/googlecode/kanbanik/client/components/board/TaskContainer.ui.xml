<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style type="com.googlecode.kanbanik.client.components.board.TaskContainer.Style">
		.defaultContantPanelStyle, .fixedContantPanelStyle {
			width: 140px;
			min-height: 45px;
		}

        .inWip {
            background-color: #d5ffde;
        }

        .wipOverrun {
            background-color: #ef8686;
        }

		.defaultContantPanelStyle {
			height: 100%;
		}
		
		.fixedContantPanelStyle {
			overflow-y: auto;
			overflow-x: hidden;
		}
	</ui:style>

	<g:FlowPanel ui:field="contentPanel" addStyleNames="{style.inWip}"/>

</ui:UiBinder>
