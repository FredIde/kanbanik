<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.boardWrapperStyle {
			width: 100%;
		}

		.boardStyle {
			border: 3px solid #e6e9ec;
			margin-bottom: 15px;
			border-radius: 4px;
			padding-right: 2px;
	                margin: 5px;
	                display: inline-block;
		}
		
		.boardLabelStyle {
			background-color: #e6e9ec;
			text-align: center;
			font-weight: bold;
			font-size: 17px;
			margin-right: -2px;
		}

	</ui:style>

	<g:FlowPanel addStyleNames="{style.boardWrapperStyle}">
		<g:FlowPanel addStyleNames="{style.boardStyle}">
			<g:FlowPanel addStyleNames="{style.boardLabelStyle}">
				<g:Label ui:field="boardName"/>
			</g:FlowPanel>
			<g:Panel ui:field="projects"/>
		</g:FlowPanel>
	</g:FlowPanel>

</ui:UiBinder>
