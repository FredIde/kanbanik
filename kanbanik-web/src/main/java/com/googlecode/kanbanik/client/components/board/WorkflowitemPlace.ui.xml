<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style type="com.googlecode.kanbanik.client.components.board.WorkflowitemPlace.Style">
		.mainPanel {
			height: 100%;
			width: 100%;
		}
		
		.headerPanel {
			text-align: center;
			background-color: #e2e4e6;
			font-weight: bold;
            margin-top: 2px;
            border-top-right-radius: 3px;
            border-top-left-radius: 3px;
			display: flex;
			padding-left: 30px;
		}
		
		.contentPanelStyle {
		}
		.wrappingTable {
			width: 100%;
			height: 100%;
		}

        .visibleHeader {
            width: 100%;
        }

        .hiddenHeader {
            display: none;
        }

        .stateStyle {
        }

        .stackStyle {
            font-style: italic;
        }

		.buttonStyle {
			width: 16px;
			height: 16px;
			padding-left: 6px;
		}

	</ui:style>

	<g:HTMLPanel addStyleNames="{style.mainPanel}">
	<!-- I know that it is an evil to format using tables but I just did not find an another reliable solution to style this-->
		<table style="width: 100%; height: 100%">
			<tr ui:field="nameWithWipLimit"><td>
				<g:FlowPanel addStyleNames="{style.headerPanel}">
					<g:Label ui:field="nameWithWipLimitField" />
					<g:PushButton ui:field="switchView" text="Switch View" title="Switch View" visible="false" addStyleNames="{style.buttonStyle}"/>
				</g:FlowPanel>
			</td></tr>
			<tr style="width: 100%; height: 100%"><td>
				<g:FlowPanel ui:field="contentPanelWrapper"/>
			</td></tr>
		</table>
	</g:HTMLPanel>

</ui:UiBinder>
