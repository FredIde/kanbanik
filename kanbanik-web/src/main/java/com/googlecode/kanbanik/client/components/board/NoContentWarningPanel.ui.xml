<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.mainPanel {
			width:100%;
			text-align: center;
		}
		.noBoardsText {
			font-weight: bold;
			font-size: 17px;
			color: red;
		}
	</ui:style>
	<g:FlowPanel addStyleNames="{style.mainPanel}">
		<g:Label ui:field="messageLabel" addStyleNames="{style.noBoardsText}" />
	</g:FlowPanel>

</ui:UiBinder>