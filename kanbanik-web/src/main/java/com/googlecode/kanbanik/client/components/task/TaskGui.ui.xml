<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.task-toolbar {
			border-bottom-style: solid;
			border-bottom-width: 1px;
			padding-bottom: 7px;
			margin-bottom: 4px;
			margin-top: 2px;
			margin-right: 2px;
			width: 100%;
		}
	</ui:style>

	<g:HTMLPanel>
		<div
			style="border-style: solid; border-width: 1px; margin:5px 5px 5px 5px; align: right;"
			ui:field="mainDiv">
			<g:FocusPanel width="100%" ui:field="header">
				<g:Label ui:field="ticketIdLabel" />
			</g:FocusPanel>

			<g:HorizontalPanel styleName="{style.task-toolbar}">
				<g:PushButton styleName="imageButtonStyle" ui:field="editButton"
					text="Edit" title="Edit" />
				<g:PushButton styleName="imageButtonStyle" ui:field="deleteButton"
					text="Delete" title="Delete" />
			</g:HorizontalPanel>

			<g:TextArea styleName="taskNameBox" width="94%" enabled="false"
				ui:field="nameLabel" />

		</div>

	</g:HTMLPanel>

</ui:UiBinder>