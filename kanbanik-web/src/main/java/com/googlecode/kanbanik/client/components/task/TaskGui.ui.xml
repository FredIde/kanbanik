<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.task-toolbar {
			border-bottom-style: solid;
			border-bottom-width: 1px;
			padding-bottom: 7px;
			margin-bottom: 4px;
			margin-top: 2px;
			margin-right: 2px;
			width: 100%;
		}
		
		.mainPanel {
			border-style: solid; 
			border-width: 1px; 
			align: right;
			margin-bottom: 4px;
			border-radius: 3px;
		}
		
		.shortDescription {
			width: 92%;
			height: 30px;
			resize: vertical;
			overflow: hidden;
			background-color: transparent;
		}
		
		.headerStyle {
			float: left;
		}
		
		.toolbarStyle {
			float: left;
		}
		
		.buttonStyle {
			float: left;
		}
		
		.headrHolder {
			width: 100%;
		}
	</ui:style>

	<g:FlowPanel addStyleNames="{style.mainPanel}">
		<g:FlowPanel addStyleNames="{style.headrHolder}">
			<g:FocusPanel addStyleNames="{style.headerStyle}" ui:field="header">
				<g:Label ui:field="ticketIdLabel" />
			</g:FocusPanel>
			<g:FlowPanel addStyleNames="{style.toolbarStyle}">
				<g:PushButton styleName="taskImageButtonStyle" addStyleNames="{style.buttonStyle}" ui:field="editButton"
					text="Edit" title="Edit" />
				<g:PushButton styleName="taskImageButtonStyle" addStyleNames="{style.buttonStyle}" ui:field="deleteButton"
					text="Delete" title="Delete" />
			</g:FlowPanel>
		</g:FlowPanel>	
		<g:TextArea addStyleNames="{style.shortDescription}" enabled="false" ui:field="nameLabel" />

	</g:FlowPanel>

</ui:UiBinder>