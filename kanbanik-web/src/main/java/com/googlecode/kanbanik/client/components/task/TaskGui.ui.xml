<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style type="com.googlecode.kanbanik.client.components.task.TaskGui.Style">
	
		.unselected {
			
		}
		
		.selected {
			border: 3px solid #92C1F0;
    		margin: 2px;
    		padding: 2px;
		}
	
		.task-toolbar {
			border-bottom-style: solid;
			border-bottom-width: 1px;
<!-- 			padding-bottom: 7px; -->
<!-- 			margin-bottom: 4px; -->
			margin-top: 2px;
			margin-right: 2px;
			width: 100%;
		}
		
		.mainPanel {
			border-style: solid; 
			border-width: 1px; 
			align: right;
			margin-bottom: 4px;
			border-radius: 3px;
			width: 99%;
			display: inline-block;
		}
		
		.shortDescription {
			height: 36px;
			width: 100%;
			resize: vertical;
			background-color: transparent;
			position: relative;
			left: -3px;
		}
		
		.headerStyle {
			float: left;
		}
		
		.toolbarStyle {
			float: left;
			position: relative;
			top: -16px;
			left: 100%;
			margin-left: -35px;
		}
		
		.buttonStyle {
			float: left;
			white-space: normal;
		}
		
		.headrHolder {
			width: 100%;
		}

		.mainSectionContent {
			width: 100%;
		}
		
		
		.shortDescriptionContainer {
			float: left;
			width: 104px;
    		overflow: hidden;
		}
		
		.assigneePicturePlaceStyle {
			padding-right: 1px;
		}
		
		.idWidget {
			float: left;
		}
		
		.dueDateWidget {
			float: left;
			padding-left: 15px;
			font-style: italic;
		}
		
		.headerContentStyle {
			display: inline-block;
		}
	</ui:style>

	<g:FocusPanel ui:field="wholePanel" addStyleNames="{style.unselected}">
		<g:FlowPanel addStyleNames="{style.mainPanel}">
			<g:FlowPanel addStyleNames="{style.headrHolder}">
				<g:FocusPanel addStyleNames="{style.headerStyle}" ui:field="header">
					<g:FlowPanel addStyleNames="{style.headerContentStyle}">
						<g:Label addStyleNames="{style.idWidget}" ui:field="ticketIdLabel" />
						<g:Label addStyleNames="{style.dueDateWidget}" ui:field="dueDateLabel"/>
					</g:FlowPanel>
				</g:FocusPanel>
				<g:FlowPanel addStyleNames="{style.toolbarStyle}">
					<g:PushButton styleName="taskImageButtonStyle" addStyleNames="{style.buttonStyle}" ui:field="editButton"
						text="Edit" title="Edit" />
					<g:PushButton styleName="taskImageButtonStyle" addStyleNames="{style.buttonStyle}" ui:field="deleteButton"
						text="Delete" title="Delete" />
				</g:FlowPanel>
			</g:FlowPanel>		
			
			<g:HTMLPanel addStyleNames="{style.mainSectionContent}">
				<!-- I know that it is an evil to format using tables but I just did not find an another reliable solution to style this-->
				<table style="width: 100%;">
					<tr style="width: 100%;">
						<td style="width: 100%;">
							<g:TextArea addStyleNames="{style.shortDescription}" ui:field="nameLabel" />	
						</td>
						<td style="">
							<g:FlowPanel addStyleNames="{style.assigneePicturePlaceStyle}" ui:field="assigneePicturePlace" />	
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:FlowPanel>
</g:FocusPanel>

</ui:UiBinder>