<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.mainPanel {
			float: left;
            margin-right: 5px;
		}
		
		.projectNameLabel {
			font-weight: bold;
			padding-bottom: 3px;
		}
	</ui:style>

	<g:FlowPanel addStyleNames="{style.mainPanel}">
		<g:Label ui:field="projectName" addStyleNames="{style.projectNameLabel}"/>
		<g:PushButton styleName="imageButtonStyle" ui:field="addButton" text="Add Task" title="Add Task" />
	</g:FlowPanel>

</ui:UiBinder>