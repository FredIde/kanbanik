<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style
		type="com.googlecode.kanbanik.client.modules.editworkflow.workflow.WorkflowEditingComponent.Style">
			.mainPanel {
			}
			
			.boardPanel {
				float: left;
			}
			
			.palettePanel {
				float: left;
			}

			.dropTargetStyle img {
				display: block;
				margin-left: auto;
				margin-right: auto
			}
			
			.palettePanelStyle {
				margin-top: 2px;
				text-align: center;
				margin-left: 0px;
				margin-right: 0px;
				border: 2px solid #e6e9ec;
				border-radius: 4px;
			}
			
			.tablePanelStyle {
				text-align: center;
				margin-top: 5px;
				border: 2px solid #e6e9ec;
				border-radius: 4px;
			}
			
			.palettePanelStyle>table {
	 			margin-left: auto;
    			margin-right: auto;
			}
			
			.headerTextStyle {
				font-weight: bold;
				background-color: #e6e9ec;
			}
			
		</ui:style>

	<g:FlowPanel addStyleNames="{style.mainPanel}">
			<g:FlowPanel ui:field="board" addStyleNames="{style.boardPanel}" />
	</g:FlowPanel>

</ui:UiBinder>