<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.googlecode.kanbanik.client.components.common'>

    <ui:style>
        .requiredFieldStyle {
            padding-left: 5px;
            padding-top: 5px;
            text-align: right;
        }

        .warningMessage {
            font-weight: bold;
            color: red;
        }

    </ui:style>

   <g:FlowPanel>
        <g:Grid>
            <g:row>
                <g:customCell>
                    <g:Label text="Name(*): "/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="name" />
                </g:customCell>
               </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="Description: "/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="description" />
                </g:customCell>
            </g:row>

            <g:row>
                <g:customCell>
                    <g:Label text="On Click URL: "/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="onClickUrl" />
                </g:customCell>
            </g:row>

            <g:row>
                <g:customCell>
                    <g:Label text="Color: "/>
                </g:customCell>
                <g:customCell>
                    <g:FlowPanel>
                        <g:ListBox ui:field="colorListBox"/>
                        <c:ColorPickerComponent ui:field="colorPickerComponent" />
                    </g:FlowPanel>
                </g:customCell>
            </g:row>

            <g:row>
                <g:customCell>
                    <g:Label text="Use Picture: "/>
                </g:customCell>
                <g:customCell>
                    <g:CheckBox ui:field="usePicture" />
                </g:customCell>
            </g:row>

            <g:row>
                <g:customCell>
                    <g:Label ui:field="pictureUrlLabel" text="Picture URL: "/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="pictureUrl" />
                </g:customCell>
            </g:row>

            <g:row>
                <g:customCell>
                    <g:Label ui:field="picturePreviewLabel" text="Image Preview: "/>
                </g:customCell>
                <g:customCell>
                    <g:FlowPanel ui:field="picturePreviewValue">
                        <g:Image ui:field="picturePreview" />
                        <g:Label ui:field="picturePreviewErrorLabel" text="Error Loading Image" />
                    </g:FlowPanel>
                </g:customCell>
            </g:row>

        </g:Grid>

       <g:Label addStyleNames="{style.requiredFieldStyle}" text="(*): required field" />

       <g:Label addStyleNames="{style.warningMessage}" ui:field="warningMessage" text="The username field must not be emtpy!"/>

    </g:FlowPanel>

</ui:UiBinder>
