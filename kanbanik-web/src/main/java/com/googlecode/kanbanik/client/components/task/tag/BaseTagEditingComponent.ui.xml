<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.googlecode.kanbanik.client.components.common'>

   <g:FlowPanel>
        <g:Grid>
            <g:row>
                <g:customCell>
                    <g:Label text="Name: "/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="name" />
                </g:customCell>
               </g:row>
            <g:row>
                <g:customCell>
                    <g:Label text="Description: "/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="description" />
                </g:customCell>
            </g:row>

            <g:row>
                <g:customCell>
                    <g:Label text="Picture URL: "/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="pictureUrl" />
                </g:customCell>
            </g:row>

            <g:row>
                <g:customCell>
                    <g:Label ui:field="picturePreviewLabel" text="Image Preview: "/>
                </g:customCell>
                <g:customCell>
                    <g:FlowPanel>
                        <g:Image ui:field="picturePreview" />
                        <g:Label ui:field="picturePreviewErrorLabel" text="Error Loading Image" />
                    </g:FlowPanel>
                </g:customCell>
            </g:row>

            <g:row>
                <g:customCell>
                    <g:Label text="On Click URL: "/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="onClickUrl" />
                </g:customCell>
            </g:row>

            <g:row>
                <g:customCell>
                    <g:Label text="Color: "/>
                </g:customCell>
                <g:customCell>
                    <c:ColorPickerComponent ui:field="colorPickerComponent" />
                </g:customCell>
            </g:row>

        </g:Grid>

    </g:FlowPanel>

</ui:UiBinder>
